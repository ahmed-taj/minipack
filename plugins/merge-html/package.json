    "typescript": "^2.4.2",
    "webpack": "^3.6.0"
  },
  "peerDependencies": {
    "html-webpack-plugin": "^2.30.1",
    "webpack": "^3.5.5"
  },
  "engines": {
    "node": ">=8.4.0",
    "npm": ">=5.3.0"
